@import "../template/movieGrid/movieGrid.wxss";
.content {
	width: 100%;
	height: 100vh;
	background-color: #F8F8F8;
	font-size: 32rpx;
}
.search .search-movie {
	color: #D9D9D9;
}
.page-content {
	display: flex;
	height: 90vh;
	flex-direction: column;
	margin-top: 32rpx;
}
.page-content .in_theaters,
.page-content .coming_soon  {
	flex: 1;
	border-top: 1px solid #e6e6e6;
	border-bottom: 1px solid #e6e6e6;
	background-color: #fff;
	padding: 20rpx 25rpx;
}
.page-content .coming_soon {
	margin-top: 37rpx;
}
.session-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 36rpx;
	/*border: 1px solid red;*/
	padding:0 10rpx 30rpx 10rpx;
	color: #4a4a4a;
}
.session-header .header-more {
	font-size: 30rpx;
	color: #6DD1AF;
}
.session-content {
	width: 100%;
	/*不折行*/
	white-space: nowrap;
	padding-bottom: 10rpx;
}
.movie-scroll {
	 width: 100%; 
	 white-space: nowrap;
}


