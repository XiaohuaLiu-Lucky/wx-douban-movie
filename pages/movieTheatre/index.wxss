@import "../template/more/more.wxss";
.content {
	width: 100%;
	height: 100vh;
	background-color: #fff;
}
.header {
	width: 100%;
	display: flex;
	justify-content: space-between;
	position: fixed;
	top: 0px;
	left: 0px;
	z-index: 999;
	font-size: 34rpx;
	font-weight: bold;
	color: #E2E8EC;
	text-align: center;
	background-color: #fff;
}
.header .header-title{
	padding: 20rpx 0rpx;
	flex: 1;
	border-bottom: 2rpx solid #e2e8ec;
}
.header .active {
	color: #32cd32;
	border-bottom: 4rpx solid #32cd32;
}
.movie-content {
	width: 100%;
	margin-top: 86rpx;
}
.movie-content .scroll-movie{
	width: 100%;
	/*height: 100vh;*/
	/*border: 1px solid red;*/
}
.bottom {
	position: fixed;
	bottom: 0rpx;
	left: 0rpx;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #9e9e9e;
	background-color: #f8f8f8;
}
