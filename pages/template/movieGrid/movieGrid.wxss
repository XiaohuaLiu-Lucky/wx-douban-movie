@import "../rating/rating.wxss";
.movie-wrapper {
	display: inline-block;
	margin: 0 10rpx;
}
.item {
	display:flex;
	align-items: center;
	flex-direction: column;
}
.item .poster {
	width: 200rpx;
	height: 280rpx;
}
.item .title {
	width: 200rpx;
	text-align: center;
	font-size: 24rpx;
	color: #4a4a4a;
	padding: 4rpx 0rpx 10rpx 0rpx;
	font-weight: 600;
	/*固定宽度，超出部分隐藏打点*/
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.item .rating {
	width: 100%;
	display:flex;
	marign: 40rpx 0;
	align-items: center;
	justify-content: space-around;
}
.item .rating .average {
	font-size: 24rpx;
	font-weight: 600;
	color: #9e9e9e;
}
.item .collect_count {
	font-size: 24rpx;
	padding: 8rpx 0rpx 0rpx 0rpx;
	color: #9e9e9e;
}

