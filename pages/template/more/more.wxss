@import "../rating/rating.wxss";
.movie-wrap {
	width: 100%;
	display: flex;
	box-sizing: border-box;
	padding: 20rpx 40rpx 34rpx 30rpx;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx solid #e2e8ec;
}
.poster {
	width: 160rpx;
	height: 240rpx;
	margin-right: 20rpx;
}
.movie-desc {
	width: 380rpx;
	flex: 1;
	color: #9e9e9e;
	font-size: 26rpx;
	font-weight: 500;
}
.movie-desc .title {
	width: 100%;
	height: 48rpx;
	line-height: 48rpx;
	margin-top: 10rpx;
	font-size: 32rpx;
	font-weight: bold;
	color: #4A4A4A;
	/*超出部分，隐藏打点*/
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.movie-desc .director,
.movie-desc .cast,
.movie-desc .genre,
.movie-desc .collect_count{
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	width: 380rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie-desc .cast {
	/*固定宽度，超出部分隐藏打点*/
	/*width: 380rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;*/
}
.movie-desc .collect_count {
	color: #9dbff9;
}
.movie-desc .rating {
	display: flex;
	align-items: center;
}
.movie-desc .average {
	margin-left: 30rpx;
	font-size: 24rpx;
	font-weight: 600;
}
.btn {
	border-radius: 6rpx;
	font-size: 26rpx;
	color: #9dbff9;
	border: 2rpx solid #9dbff9;
	padding: 8rpx 20rpx;
	font-weight: 500;
}