@import "../template/movieGrid/movieGrid.wxss";
.content {
	width: 100%;
	height: 100vh;
	background-color: #fff;
	font-size: 20rpx;
}
.poster-wrap {
	width: 100%;
	padding: 30rpx 0;
	text-align: center;
	background-color: #E9E9E9;
}
.poster-wrap .poster {
	width: 270rpx;
	height: 351rpx;
}
.session {
	width: 100%;
	padding: 20rpx 40rpx;
	box-sizing: border-box;
}
.desc-wrap {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.desc-wrap .left-desc .sameHeight{
	line-height: 1.6;
	color: #A5A5A9;
}
.desc-wrap .left-desc .name {
	color: #5f5f5f;
	font-size: 34rpx;
	font-weight: bold;
	line-height: 1.8;
}
.desc-wrap .right-fans {
	border: 1px solid #A5A5A9;
	color: #A5A5A9;
	padding: 10rpx;
}
.summary-wrap .summary-title,
.work-wrap .work-title{
	font-size: 28rpx;
	color: #A5A5A9;
	line-height: 1.6;
}
.summary-wrap .summary-content{
	font-size: 24rpx;
	color: #575757;
	text-indent: 2em;
	/*border: 1px solid red;*/
}
.summary-wrap .summary-3line {
	overflow: hidden;    
	display: -webkit-box;               
	text-overflow: ellipsis;            
	-webkit-box-orient: vertical;       
	-webkit-line-clamp: 3;    
}
.summary-wrap .unfold {
	display: block;
	padding: 10rpx 0;
	color: #31d041;
	font-size: 22rpx;
}
.work-wrap .scroll {
	width: 100%;
	white-space: nowrap;
	/*border: 1px solid red;*/
}
/*修正模板样式*/
.movie-wrapper {
	margin:0rpx 10rpx 0rpx 0rpx;
}
.item .poster {
	width: 160rpx;
	height: 208rpx;
	/*200 / 260 = 160 /x*/
}
.item .title {
	width: 160rpx;
	font-size: 20rpx;
	line-height: 1.6;
	color: #A5A5A9;
	padding: 0rpx;
}
.item .rating {
	marign: 10rpx 0;
	transform: scale(0.9);
}
.item .rating .average {
	font-size: 20rpx;
}
.item .collect_count {
	font-size: 18rpx;
	padding: 0rpx;
	line-height: 1.6;
}