@import "../template/rating/rating.wxss";
.content {
	width: 100%;
	height: 100vh;
	font-size: 20rpx;
}
.poster-wrap {
	width: 100%;
	background-color: #e9e9e9;
	padding: 20rpx 0rpx;
	text-align: center;
}
.poster-wrap .poster {
	width: 260rpx;
	height: 350rpx;
}
.desc-wrap,
.wish-wrap,
.summary-wrap,
.casts-wrap{
	width: 100%;
	box-sizing: border-box;
	padding: 0rpx 40rpx;
}
.desc-wrap {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 30rpx;
	margin-bottom: 10rpx;
}
.desc-wrap .left-desc .title{
	font-size: 38rpx;
	font-weight: bold;
	color: #4a4a50;
	line-height: 1.8;
}
.desc-wrap .left-desc .year_genres,
.desc-wrap .left-desc .original_title,
.desc-wrap .left-desc .country{
	color: #A5A5A9;
	line-height: 1.4;
}
.desc-wrap .right-rating {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 90rpx;
	padding: 15rpx 10rpx;
	border: 1px solid #b2b2b2;
	border-radius: 8rpx;
	box-shadow: 1px 1px 1px #ccc;
}
.desc-wrap .right-rating .rat {
	font-size: 26rpx;
	color: #082a3e;
	font-weight: bold;
	padding-bottom: 5rpx;
}
.desc-wrap .right-rating .allStar {
	transform: scale(0.8);
}
.desc-wrap .right-rating .ratings_count {
	font-size: 16rpx;
	color: #5b645d;
	font-weight: 600;
}
.wish-wrap {
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 40rpx 40rpx 30rpx 40rpx;
}
.wish-wrap .wish_count,
.wish-wrap .comments_count {
	color: #df9c13;
	font-size: 24rpx;
	font-weight: 500;
	padding: 10rpx 60rpx;
	border: 2rpx solid #df9c13;
	border-radius: 6rpx;
	box-shadow: 1rpx 1rpx 2rpx #df9c13;
}
.summary-wrap {
	margin-bottom: 30rpx;
}
.summary-wrap .summary-title,
.casts-wrap .cast-title {
	color: #A5A5A9;
	font-size: 26rpx;
	font-weight: 500;
	line-height: 1.6;
}
.summary-wrap .summary-wrap-cont {
	padding: 0rpx;
}
.summary-wrap .summary-content {
	text-indent: 2em;
	line-height: 1.6;
	color: #575757;
	font-size: 22rpx;
	/*border: 1px solid red;*/
}
.summary-wrap .summary-all {
	overflow: hidden;    
	display: -webkit-box;               
	text-overflow: ellipsis;            
	-webkit-box-orient: vertical;       
	-webkit-line-clamp: 999;             
}
.summary-wrap .summary-3line {
	overflow: hidden;    
	display: -webkit-box;               /*将对象作为弹性伸缩盒子模型显示。
	text-overflow: ellipsis;            /*可以用来多行文本的情况下，用省略号“...”隐藏超出范围的文本。*/
	-webkit-box-orient: vertical;       /*设置或检索伸缩盒对象的子元素的排列方式。*/
	-webkit-line-clamp: 3;              /*限制在一个块元素显示的文本的行数。*/
}
.btn {
	display: block;
	padding: 10rpx 0;
	color: #31d041;
	font-size: 22rpx;
}
.casts-wrap .scroll {
	width: 100%;
	white-space: nowrap;
	/*border: 1px solid red;*/
}
.casts-wrap .cast-content {
	display: inline-block;
	margin-right: 16rpx;
	/*border: 1px solid red;*/
}
.casts-wrap .cast-content.cancelSpace {
	margin-right: 0rpx;
}
.casts-wrap .cast-content .cast-poster{
	width: 158rpx;
	height: 190rpx;
}
.casts-wrap .cast-content .name{
	margin: 5rpx auto;
	width: 150rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	text-align: center;
	color: #575757;
}